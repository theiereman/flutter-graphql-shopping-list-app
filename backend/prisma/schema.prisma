generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int               @id @default(autoincrement())
  email     String            @unique
  password  String
  groups    UsersOnGroups[]
  recipes   Recipe[]
  lists     List[]
}

model Group {
  id      Int                 @id @default(autoincrement())
  name    String   
  users   UsersOnGroups[]
  recipes Recipe[]
  lists   List[]
}

model UsersOnGroups {
  user User @relation(fields: [userId], references: [id])
  userId Int 
  group Group @relation(fields: [groupId], references: [id])
  groupId Int

  @@id([userId, groupId])
}

model List {
  id      Int      @id @default(autoincrement())
  name    String
  items   Item[]
  userId        Int?
  user          User?     @relation(fields: [userId], references: [id])
  groupId       Int?
  group         Group?    @relation(fields: [groupId],references: [id])
}

model Recipe {
  id            Int       @id @default(autoincrement())
  name          String  
  ingredients   Item[]
  userId        Int?
  user          User?     @relation(fields: [userId], references: [id])
  groupId       Int?
  group         Group?    @relation(fields: [groupId],references: [id])
}

model Item {
  id        Int       @id @default(autoincrement())
  name      String
  recipeId  Int?
  recipe    Recipe?   @relation(fields: [recipeId], references: [id])
  listId    Int?
  list      List?     @relation(fields: [listId], references: [id])  
}